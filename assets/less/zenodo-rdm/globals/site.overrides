body {
  font-weight: @normal;

  strong {
    font-weight: @bold;
  }
}

#invenio-nav {
  min-height: 96px;
}

.logo {
  width: 160px;
  margin-right: 2rem;
}

.rdm-logo {
    width: 100%;
    padding-bottom: .5rem;
}

/*Creatibutors modal*/
.modals {

  .small-icon {
    width: 15px;
    margin: 0.5em 0.2em 0.5em 0.1em;
  }

  .spaced-left {
    margin-left: 0.3em;
  }
}

a.inverted {
  color: @invertedTextColor;
}

.ui.primary.header {
  color: @primaryColor !important;
}

#rdm-footer-element {
  a {
    color: @footerTextDarkColor;
  }
}


#contact-page {   

  .panel-body {
    padding-top: 2*@defaultPadding;
    padding-left: 2*@defaultPadding;
  }
}

